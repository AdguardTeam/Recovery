{
    "manifest_version": 2,

    "name": "Adblock Recovery",
    "description": "Adblock Recovery extension",
    "version": "0.3.0",

    "browser_action": {
        "default_icon": "options/img/logo.png",
        "default_popup": "popup/popup.html",
        "default_title": "Adblock Recovery"
    },
    "icons": {
        "16": "options/img/logo.png",
        "48": "options/img/logo.png",
        "128": "options/img/logo.png"
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": ["http://*/*", "https://*/*"],
        "js": ["userscript.js"]
    }],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "minimum_chrome_version": "26",
    "options_page": "options/index.html",
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webNavigation",
        "unlimitedStorage",
        "privacy",
        "storage"
    ]
}
